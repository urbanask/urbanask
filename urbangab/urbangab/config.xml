<?xml version="1.0" encoding="UTF-8" ?>
<widget 
    xmlns       = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.urbanask"
    versionCode = "10"
    version     = "0.1.25">

    <name>urbanAsk</name>
    <description>Find it. Share it.</description>

    <author href="https://urbanask.com" email="support@urbanask.com">urbanAsk Inc.</author>

    <preference name="phonegap-version" value="1.5.0" />
    <preference name="fullscreen"       value="false" />
    <preference name="stay-in-webview"  value="true" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="handset" />
    
    <icon src="images/icon-57.png" width="57" height="57"/>
    <icon src="images/icon-72.png" width="72" height="72"/>
    <icon src="images/icon-114.png" width="114" height="114"/>

    <gap:splash src="images/splash-fullscreen.png" />
    
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://plugins.phonegap.com/ChildBrowser/2.0.0" />
    
    <access origin="*" />
    
</widget>

